---
const {header, text, img} = Astro.props;
---

<div class="card">
  <img src={img} alt="Tekst" />
  <h2>{header}</h2>
  <p>{text}</p>
  <slot />
</div>

<style>
  h2 {
    font-weight: 200;
    font-size: 1rem;
  }

  p {
    font-weight: 150;
    font-size: 0.8rem;
  }

  .card {
    display: inline-block;
    border-radius: 10px;
    padding: 15px;
    width: 300px;
    text-align: left;
    transition:
      transform 0.3s ease,
      background-color 0.3s ease,
      opacity 0.3s ease;
  }

  .card:hover {
    background-color: rgb(21, 19, 17);
    opacity: 0.8;
  }

  img {
    max-width: 100%;
    border-radius: 15px;
    object-fit: cover;
  }

  .pop-img {
    border-radius: 50%;
    margin-left: 11%;
  }
</style>
