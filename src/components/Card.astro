---
const artists = await fetch(
  "https://fetch-with-astro.netlify.app/api/artists"
).then((res) => res.json());
console.log(artists);

const artist = artists.filter(
  (artist, index, self) => index === self.findIndex((a) => a.id === artist.id)
);

/* const header = goldie.title;
